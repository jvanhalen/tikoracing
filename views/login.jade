doctype html
html
	include header
	body
		.container
			.col-sm-4.col-sm-offset-4
				form.form-signin(action="/login", method="post")
					h2.fa.fa-sign-in.form-signin-heading  Login
					
					if (message.length > 0)
						.alert.alert-danger #{message}
					
					input.form-control(name="username", type="text", placeholder="Username", autofocus)
					input.form-control(name="password", type="password", placeholder="Password")
					input.btn.btn-lg.btn-primary.btn-block(type="submit" value="Login")
				hr
				a(href="/") Home